                                        var a = comment.CreatedDate;
                                        var b = DateTime.Now;
                                        var c = a - b;
                                        <div class="media">
                                            <a class="media-left" href="#">
                                                <img src="@comment.User.PhotoUrl" alt="" class="rounded-circle">
                                            </a>
                                            <div class="media-body">
                                                <h4 class="media-heading user_name">@comment.User.Name @comment.User.Surname <small>
                                                    @c.ToString("mm") 
