@model WebApp.Areas.Admin.ViewModels.UserRoleVM

<h2>Edit User Role</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label">Username:</label>
                <input asp-for="User.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label">Roles:</label>
                <select asp-for="Roles" class="form-control" asp-items="@Model.Roles.Select(r => new SelectListItem { Value = r, Text = r })"></select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    
</div>