@model List<Article>

<h2>Articles by @ViewBag.UserName</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.Content</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No articles found.</p>
}
