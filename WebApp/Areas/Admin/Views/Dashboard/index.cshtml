@model DashboardVM
@{
    @* article *@
    int percentage = ViewBag.ArticleCount; // Burada yüzde değerini verin
    int interest = percentage / 100;
    string interestString = interest.ToString("P2");
    @* cat *@
    int categoryPercentage = ViewBag.CategoryCount; // Burada yüzde değerini verin
    int categoryInterest = categoryPercentage / 100;
    string CategoryinterestString = categoryInterest.ToString("p3");
}

@if (!User.IsInRole("Users"))
{
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Users (Annual)</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.UsersCount+</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-alt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Pending Requests</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.contactCount+</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-comments fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">My Posts</h5>
                        @* <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> *@
                        <a href="/admin/dashboard/Paylasimlarim" class="btn btn-primary">look</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Statistical values</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold"> Percentage of articles distributed <span
                        class="float-right">@percentage</span></h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-info" role="progressbar" style="width: @percentage%" aria-valuenow="10"
                        aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">percentage of the category created<span
                        class="float-right">@categoryPercentage</span></h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @categoryPercentage%"
                        aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole("Users"))
