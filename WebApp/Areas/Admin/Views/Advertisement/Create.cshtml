<div class="col-lg-8 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="adsName">Advertisement name</label>
                        <input id="adsName" class="form-control" type="text" name="Name" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="adsSizeX">Size X</label>
                        <input id="adsSizeX" class="form-control" type="text" name="SizeX" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="adsSizeY">Size Y</label>
                        <input id="adsSizeY" class="form-control" type="text" name="SizeY" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Photo</label>
                        <label class="btn btn-outline-primary form-control" for="adsPhoto">Choose File</label>
                        <input id="adsPhoto" class="form-control d-none" type="file" name="Photo" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <label for="basic-url" class="form-label">Ads url</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon3">https://</span>
                        <input type="text" name="DirectionAddress" class="form-control" id="basic-url"
                            aria-describedby="basic-addon3">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="adsPrice">Price</label>
                        <input id="adsPrice" class="form-control" type="number" name="Price" />
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="adsRate">Rate</label>
                        <input id="adsRate" class="form-control" min="0.05" max="1000" type="number" name="Rate" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>