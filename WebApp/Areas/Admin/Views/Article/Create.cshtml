@model Article

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 m-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Title" class="form-label"></label>
                                    <input class="form-control" asp-for="Title" />
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Content" class="form-label"></label>
                                    <textarea id="editor1" class="form-control" asp-for="Content"></textarea>
                                    <span class="text-danger" asp-validation-for="Content"></span>
                                </div>
                            </div>
                           
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                                        <option value="">Select category</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="submit" value="Add aticle" class="btn btn-outline-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="rows">
                    <div class="card mb-5">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="articleTag">Tags</label>
                                <select id="articleTag" class="form-control" name="Tags" multiple>
                                    @foreach (var tag in ViewData["Tags"] as List<Tag>)
                                    {
                                        <option value="@tag.Id">@tag.TagName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-6">
                        <div class="card-body">
                            <div class="form-group">
                                <input type="file" class="form-control" name="Photo" />
                            </div>
                            <div class="form-group">
                                 <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.CheckBoxFor(x=>x.Gadgets)
                                        <label asp-for="Gadgets" class="form-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor1');
    </script>
}